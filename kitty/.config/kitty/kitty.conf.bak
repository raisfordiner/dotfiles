# vim:ft=kitty


enabled_layouts 		splits
draw_minimal_borders 	no
window_padding_width    6 0 0
window_border_width		0px	
window_margin_width		0
placement_strategy		center
enable_audio_bell 		no

# The basic colors
foreground              #282828
background              #fbf1c7
selection_foreground    #fbf1c7
selection_background    #6e6a86
background_opacity	   	1

# Cursor colors
cursor                  #282828
cursor_text_color       #fbf1c7
cursor_shape 			block
cursor_trail			0
#cursor_trail_decay		0.1 0.4
cursor_trail_start_threshold  0

# URL underline color when hovering with mouse
url_color               #9ccfd8

# Colors for marks (marked text in the terminal)
mark1_foreground #1e1e2e
mark1_background #b4befe
mark2_foreground #1e1e2e
mark2_background #cba6f7
mark3_foreground #1e1e2e
mark3_background #74c7ec

# The 16 terminal colors

# black
color0 #fbf1c7
color8 #f9f5d7

# red
color1 #cc241d
color9 #9d0006

# green
color2  #98971a
color10 #79740e

# yellow
color3  #d79921
color11 #b57614

# blue
color4  #458588
color12 #076678

# magenta
color5  #b14286
color13 #8f3f71

# cyan
color6  #689d6a
color14 #427b58

# white
color7  #282828
color15 #504945


# BEGIN_KITTY_FONTS
font_family      family='NotoSansM Nerd Font Mono' style=SemiBold
bold_font        family='NotoSansM Nerd Font Mono' postscript_name=NotoSansMNFM-Bold
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
font_size 		 14.0

# Special Configs
hide_window_decorations yes 
scrollback_lines 8000
scrollback_indicator_opacity 0
wheel_scroll_min_lines 3
paste_actions quote-urls-at-prompt
strip_trailing_spaces never
select_by_word_characters @-./_~?&=%+#
show_hyperlink_targets yes

map ctrl+shift+v paste_from_clipboard
