# vim:ft=kitty

shell /usr/bin/zsh

enabled_layouts 		splits
draw_minimal_borders 	no
window_padding_width    6 0 0
window_border_width		0px	
window_margin_width		0
placement_strategy		center
enable_audio_bell 		no

# The basic colors
foreground              #12120f
background              #f2ecbc
selection_foreground    #f2ecbc
selection_background    #624c86
background_opacity	   	1

# Cursor colors
cursor                  #624283
cursor_text_color       #f2ecbc
cursor_shape 			block
cursor_trail			0
#cursor_trail_decay		0.1 0.4
cursor_trail_start_threshold  0

# URL underline color when hovering with mouse
url_color               #b5cbd2

# Colors for marks (marked text in the terminal)
mark1_foreground #f2ecbc
mark1_background #5d57a3
mark2_foreground #f2ecbc
mark2_background #624c83
mark3_foreground #f2ecbc
mark3_background #c7d7e0

# The 16 terminal colors

# black
color0 #1d1d19
color8 #393836

# red
color1 #c84853
color9 #c84853

# green
color2  #6f894e
color10 #6f894e

# yellow
color3  #de9800
color11 #de9800

# blue
color4  #4d699b
color12 #4d699b

# magenta
color5  #766b90
color13 #766b90

# cyan
color6  #b5cbd2
color14 #b5cbd2

# white
color7  #dcd5ac
color15 #e2ddb0


# BEGIN_KITTY_FONTS
font_family      family='NotoSansM Nerd Font Mono' style=Bold
bold_font        family='NotoSansM Nerd Font Mono' style=ExtraBold
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
font_size 		 14.0

# Special Configs
hide_window_decorations yes 
scrollback_lines 8000
scrollback_indicator_opacity 0
wheel_scroll_min_lines 3
paste_actions quote-urls-at-prompt
strip_trailing_spaces never
select_by_word_characters @-./_~?&=%+#
show_hyperlink_targets yes

map ctrl+shift+v paste_from_clipboard
